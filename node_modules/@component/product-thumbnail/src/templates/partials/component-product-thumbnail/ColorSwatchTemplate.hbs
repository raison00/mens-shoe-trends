{{#if colors.noCarousel}}
  <ul class="colorSwatches">
    {{#each colors.colorMap}}
      <li class="colorSwatch">
        <div title="{{{name}}}" data-colorswatchfamily="{{normalName}}" data-preview="{{preview}}" class="{{#if swatchSelected}}swatchSelected{{/if}}" {{#each imagery.additionalImageSource}} {{#if @first ~}}data-colorswatchimg='{{/if ~}}{{filePath}}{{#if @last}}'{{else}},{{/if ~}}{{/each}} {{#if jumboSwatch}}data-jumboswatchurl="{{jumboSwatch}}" data-jumboswatchoffset="{{jumboSwatchOffset}}"{{/if}}>
          <span style="background: url({{colorSwatchSprite}}) {{offset}}px 0 transparent;"></span>
        </div>
      </li>
    {{/each}}
  </ul>
  {{else}}
    <div title="{{{name}}}" data-colorswatchfamily="{{normalName}}" data-preview="{{preview}}" class="{{#if swatchSelected}}swatchSelected{{/if}}" {{#each imagery.additionalImageSource}} {{#if @first ~}}data-colorswatchimg='{{/if ~}}{{filePath}}{{#if @last}}'{{else}},{{/if ~}}{{/each}} {{#if jumboSwatch}}data-jumboswatchurl="{{jumboSwatch}}" data-jumboswatchoffset="{{jumboSwatchOffset}}"{{/if}}>
      <span style="background: url({{colorSwatchSprite}}) {{offset}}px 0 transparent;"></span>
    </div>
{{/if}}
