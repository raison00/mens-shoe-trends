
		<a href="{{identifier.productUrl}}" class="productDescLink" tabindex="0">
		{{!-- product thumbnail image --}}
			{{> component-product-thumbnail/bcom/product-images-responsive this}}
			{{#if detail.bottomOverlay}}
		       <div {{#each detail.bottomOverlay.classes}}{{#if @first ~}}class="{{/if ~}}{{this}}{{#if @last ~}}{{else}} {{/if ~}}{{/each}} bottomOverlayLabel">{{detail.bottomOverlay.text}}</div>
			{{/if}}
			
			{{!-- product description --}}
		  <div class="productDescription">

				{{#if detail.flags.chanel}}
						<span class="chanel-brand">{{{detail.brand}}}</span>
						<span class="chanel-name">{{{detail.name}}}</span>
						<span class="chanel-secondaryDescription">{{{detail.secondaryDescription}}}</span>
				
				{{else}}
	          <span class="brand">{{#if detail.subBrand}}{{{detail.subBrand}}}{{else}}{{{detail.brand}}}{{/if}}</span>
	    			{{{detail.name}}}
				
				{{/if}}
		 	</div>
		</a>
  
  <div class="productDetail">
    {{!-- reviews --}}
    {{#if detail.reviewStatistics.aggregate}}
        <div class="productReviews">
            <div class="b-pdp-rating wishlist-Item-Reviews">
                <div style="width:{{productRating detail.reviewStatistics.aggregate.rating}}%"></div>
            </div>
        </div>
    {{/if}}
		
		{{#unless detail.flags.giftProduct}}
			{{#ifCond detail.typeName "!==" "VIRTUAL_GIFT_CARD" }}

        <div class="priceInfo">
      {{!-- tiered price --}}
            <div class="prices {{#if pricing.price.priceType.memberProductOnSale}}onSale {{/if}}{{#if pricing.price.priceType.upcOnSale}}onSale {{/if}}">
      {{#each pricing.price.tieredPrice}}
        <div class ="tnPrice">
          {{#label-splitter label as |priceLabel|}}
            {{#if values.[1]}}
              <span class="{{values.0.type}}">
                {{!-- Promo Lab Remove Orig/Reg Price Labels --}}
                {{#ifCond @root.meta.properties.promoPriceLabelsEnabled "===" true}}
                  {{#showPriceLabel priceLabel.label}}
                    {{priceLabel.label}}
                  {{/showPriceLabel}}
                {{else}}
                  {{priceLabel.label}}
                {{/ifCond}}
                {{#if priceLabel.showPrice}}{{values.0.formattedValue}}{{/if}}
              </span>
              <span class="{{values.1.type}}">- {{values.1.formattedValue}} {{#if values.0.percentOff}}({{values.0.percentOff.[0]}}{{#if values.1.percentOff}}-{{values.1.percentOff.[0]}}{{/if}}% OFF){{/if}}</span>

            {{else}}
              
              <span class="{{values.0.type}}">

              {{!-- Promo Lab Remove Orig/Reg Price Labels --}}
              {{#ifCond @root.meta.properties.promoPriceLabelsEnabled "===" true}}
                {{#showPriceLabel priceLabel.label}}
                  {{priceLabel.label}}
                {{/showPriceLabel}}
              {{else}}
                {{priceLabel.label}}
              {{/ifCond}}

              {{#if priceLabel.showPrice}}{{values.0.formattedValue}}{{/if}} {{#if values.0.percentOff}}({{values.0.percentOff.[0]}}% OFF){{/if}}<br/>
              </span>
            {{/if}}
          {{/label-splitter}}
        </div>
      {{/each}}
            </div>
            {{#if pricing.price.priceType.selectItemsOnSale}}
                 {{#ifCond pricing.price.priceType.memberProductOnSale "||" pricing.price.priceType.upcOnSale}}
                    <div class="memberProductOnSale">SELECT ITEMS ON SALE</div>
                 {{/ifCond}}
           {{/if}}
        </div>
				{{/ifCond}}
		{{/unless}}

    {{!-- new markdown --}} 
    {{#if pricing.price.priceType.text}}
      <span class="new-markdown-message">{{pricing.price.priceType.text}}</span>
    {{/if}}

    {{!-- color swatches --}}
    {{#if traits.colors.colorMap}}
        <div class="colorSwatchesContainer" id="colorSwatch_{{identifier.productId}}" data-colorswatchproduct={{identifier.productId}}>
       <ul aria-label="Product colors" role="radiogroup" class="colorSwatches">
         {{{bcomSwatchHelper traits}}}
         {{#ifCond traits.colors.colorMap.length ">" 7}}
            <li class="colorSwatch swatchColorsMore"><div><a href="{{identifier.productUrl}}">MORE</a></div></li>
         {{/ifCond}}
       </ul>
        </div>
    {{/if}}


    {{!-- badges --}} 
    {{#if pricing.badges}}
        <div class="badges">
          {{#each pricing.badges}} 
            <div class="badge">
              <span class="badgeHeader {{colorClassName}}">{{#if description}}{{description}}{{else}}{{checkoutDescription}}{{/if}}</span>
              {{#if image.url}}
                <img src="{{image.url}}" alt="{{image.alt}}" title="{{image.alt}}" class="callout" /> 
              {{/if}}
            </div>
          {{/each}}
        </div>
    {{/if}}

    
  </div>		
