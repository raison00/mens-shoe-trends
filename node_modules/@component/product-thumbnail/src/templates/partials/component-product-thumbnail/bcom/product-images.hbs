<div class="productThumbnailImage" id="{{identifier.productId}}">
    <a href="{{identifier.productUrl}}" tabindex="-1" class="productDescLink">
        <div id="img_{{identifier.productId}}"  class="thumbnailImageContainer {{#ifCond traits.colors.selectedColor.imagery.additionalImageSource.length '>' 1}}altImage{{/ifCond}}" data-altimage="{{#ifCond traits.colors.selectedColor.imagery.additionalImageSource.length '>' 1}}true{{/ifCond}}">
        {{#if traits.colors.selectedColor.imagery.primaryImage.filePath}}
            <img src="{{bcomImageSrc traits.colors.selectedColor.imagery.primaryImage.filePath traits.colors.selectedColor.imagery.urlTemplate}}&hei=300&wid=240" class="thumbnailImage" alt="{{{detail.brand}}} - {{{detail.name}}}" title="{{{detail.brand}}} - {{{detail.name}}}" />
            {{#ifCond traits.colors.selectedColor.imagery.additionalImageSource.length '>' 1}}
                <img src="{{bcomImageSrc traits.colors.selectedColor.imagery.additionalImageSource.[1].filePath traits.colors.selectedColor.imagery.urlTemplate}}&hei=300&wid=240" class="thumbnailImage" alt="{{{detail.brand}}} - {{{detail.name}}}" title="{{{detail.brand}}} - {{{detail.name}}}" />
            {{else}}
                <img src="#" class="thumbnailImage hidden" alt="{{{detail.brand}}} - {{{detail.name}}}" title="{{{detail.brand}}} - {{{detail.name}}}" />
            {{/ifCond}}
        {{else}}
             <img id="img_{{identifier.productId}}" src="{{bcomImageSrc imagery.primaryImage.filePath imagery.urlTemplate}}&hei=300&wid=240" class="thumbnailImage" alt="{{{detail.brand}}} - {{{detail.name}}}" title="{{{detail.brand}}} - {{{detail.name}}}" />
             {{#ifCond imagery.additionalImageSource.length '>' 1}}
                <img src="{{bcomImageSrc imagery.additionalImageSource.[1].filePath imagery.urlTemplate}}&hei=300&wid=240" class="thumbnailImage" alt="{{{detail.brand}}} - {{{detail.name}}}" title="{{{detail.brand}}} - {{{detail.name}}}" />
             {{else}}
                <img src="#" class="thumbnailImage hidden" alt="{{{detail.brand}}} - {{{detail.name}}}" title="{{{detail.brand}}} - {{{detail.name}}}" />
             {{/ifCond}}
        {{/if}}
        </div>
    </a>
    <div class="jumboSwatch"><div id="jumboSwatch_{{identifier.productId}}"></div></div>
</div>
