{{#if detail.flags.hasMLT}}
    <div class="similar-products-feature {{#ifCond @root.meta.context.deviceType '===' 'PHONE' }}hidden{{/ifCond}}">
        <a href="/shop/similar-products?productId={{identifier.productId}}&imageId={{#removeExtension traits.colors.selectedColor.imagery.primaryImage.name}}{{/removeExtension}}" rel='noindex, nofollow' data-value="MLT">
            <button class="m-similar-products-btn tertiary tiny active" data-product-id="{{identifier.productId}}" data-img-id="{{#removeExtension traits.colors.selectedColor.imagery.primaryImage.name}}{{/removeExtension}}">more like this</button>
        </a>
        <div class="similar-products-btn-cover"></div>
    </div>
{{/if}}


